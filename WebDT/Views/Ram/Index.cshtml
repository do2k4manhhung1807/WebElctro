@model IEnumerable<WebDT.Models.Ram>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách Ram </h1>

<p>
    <a asp-action="Create">Thêm mới </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên ram 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenRam)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaRam">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaRam">Chi tiết </a> |
                <a asp-action="Delete" asp-route-id="@item.MaRam">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
